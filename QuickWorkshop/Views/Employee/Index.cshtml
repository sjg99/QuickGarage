
@{
    Layout = null;
    if (Session["email"] == null)
    {
        Response.Redirect("~/");
    }
    QuickWorkshop.Models.order o = new QuickWorkshop.Models.order();
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="~/Design/Management/main.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400" rel="stylesheet">
    <title>CPanel | Menu</title>
</head>

<body>
    <header>
        <nav>
            <div class="logo">
                <div class="container">
                    <img src="~/Design/Management/img/Logo2.png" alt="">
                </div>
            </div>
            <div class="perfil">
                <div class="contenedor-prof">
                    <p>@Session["name"]</p>
                    <img src="~/Design/Management/img/user.png" alt="">
                </div>
            </div>
        </nav>
    </header>
    <main class="infoBar">
        <div class="ajustes">
            <h2>Gestión</h2>
        </div>
        <div class="iconos">
            <div class="cajaadd">
                <img src="~/Design/Management/img/add.png" alt="">
            </div>
        </div>
    </main>
    <div class="Ventana">
        <!-- ventana de ajuste -->
        <div id="AddWindow" class="VentanaAdd">
            
        </div>
        </div>
        <section class="contenedor-padre">
            <div class="izq">
                <div class="txtContenedor">
                    <h2>Módulos</h2>                    
                    @Html.ActionLink("Facturación-No Disponible", "GetOrders")
                    <h2>Cuenta</h2>
                    <a href="@Url.Action("LogOut", "Employee")">Cerrar Sesión</a>
                </div>
            </div>
            <div class="derecha">
                <div class="contenedor">
                    <div class="caja">
                        <div class="caja-1">
                            <img src="~/Design/Management/img/order.png" alt="">
                        </div>
                        <div class="caja-2">
                            <div class="info">
                                <h3 class="titulo">Factura</h3>
                                <p>Description of the order</p>
                                <button class="edit">Edit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <script src="/Scripts/jquery-3.3.1.js"></script>
        <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <script src="/Scripts/AddWindow.js"></script>
    </body>
    </html>
