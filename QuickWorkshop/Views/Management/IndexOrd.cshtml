@model QuickWorkshop.ViewModels.ManagementLoading
@{
    Layout = null;
    if (Session["email"] == null)
    {
        Response.Redirect("~/");
    }
    QuickWorkshop.Models.order o = new QuickWorkshop.Models.order();
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="~/Design/Management/Style.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400" rel="stylesheet">
    <title>QPanel | Facturacion</title>
</head>

<body>
    <header>
        <nav>
            <div class="logo">
                <div class="container">
                    <img src="~/Design/Management/img/Logo2.png" alt="">
                </div>
            </div>
            <div class="perfil">
                <div class="contenedor-prof">
                    <p>@Session["name"]</p>
                    <img src="~/Design/Management/img/user.png" alt="">
                </div>
            </div>
        </nav>
    </header>
    <main class="infoBar">
        <div class="ajustes">
            <h2>Gestión</h2>
        </div>
        <div class="iconos">
            <div class="cajaadd">
                <img src="~/Design/Management/img/add.png" alt="">
            </div>
        </div>
    </main>
    <div class="Ventana">
        <!-- ventana de ajuste -->
        <div id="AddWindow" class="VentanaAdd">
           
        </div>
    </div>
    <section class="contenedor-padre">
        <div class="izq">
            <div class="txtContenedor">
                <h2>Módulos</h2>
                @Html.ActionLink("Productos", "GetProducts")
                @Html.ActionLink("Servicios", "GetServices")
                @Html.ActionLink("Empleados", "GetUsers")
                @Html.ActionLink("Facturación", "GetOrders")
                <h2>Cuenta</h2>
                <a href="@Url.Action("LogOut", "Management")">Cerrar Sesión</a>
            </div>
        </div>
        <div class="derecha">
            <div class="contenedor">
                @foreach (var x in Model.orders)
                {
                    <div class="caja">
                        <div class="caja-1">
                            <img src="~/Design/Management/img/brake.png" alt="">
                        </div>
                        <div class="caja-2">
                            <div class="info">
                                @using (Ajax.BeginForm("ViewOrd", new AjaxOptions { UpdateTargetId = "AddWindow", InsertionMode = InsertionMode.Replace }))
                                {
                                    @Html.HiddenFor(m => m.orders.First().OrderId, new { Value = x.OrderId })
                                    @Html.HiddenFor(m => m.orders.First().Date, new { Value = x.Date })
                                    @Html.HiddenFor(m => m.orders.First().TotalPrice, new { Value = x.TotalPrice })
                                    @Html.HiddenFor(m => m.orders.First().ProductQ, new { Value = x.ProductQ })
                                    @Html.HiddenFor(m => m.orders.First().ServiceQ, new { Value = x.ServiceQ })
                                    @Html.HiddenFor(m => m.orders.First().Status, new { Value = x.Status })
                                    @Html.HiddenFor(m => m.orders.First().UserId, new { Value = x.UserId })
                                    @Html.HiddenFor(m => m.orders.First().CustomerId, new { Value = x.CustomerId })

                                    <h3 class="titulo">Factura #@x.OrderId</h3>                                 
                                    <p>Cantidad disponible: @x.TotalPrice</p>
                                    <button class="edit" type="submit">Editar</button>
                                }
                            </div>
                        </div>
                    </div>
                }              
           </div>
        </div>
    </section>
    <script src="/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="/Scripts/AddWindow.js"></script>
</body>
</html>
